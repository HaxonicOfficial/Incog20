<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/nav_quickmodes_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
        android:id="@+id/nav_quickmodes_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_margin="6dp"
        android:background="@drawable/nav_icon_background_shape_text"
        android:gravity="center"
        android:padding="2dp"
        android:text="Quick Modes"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.CardView
            android:id="@+id/nav_quickmodes_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">



                    <LinearLayout
                        android:id="@+id/nav_row_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:id="@+id/nav_icognito_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/nav_icon_background_shape"
                            android:gravity="center"
                            android:onClick="navigationMenuHandler"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/nav_icon"
                                android:layout_height="@dimen/nav_icon"
                                android:src="@drawable/ic_spy"

                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/nav_icon_background_shape_text"
                                android:padding="2dp"
                                android:text="Incognito"
                                android:textColor="#000" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/nav_readmode_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/nav_icon_background_shape"
                            android:gravity="center"
                            android:onClick="navigationMenuHandler"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/nav_icon"
                                android:layout_height="@dimen/nav_icon"
                                android:src="@drawable/ic_eye" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/nav_icon_background_shape_text"
                                android:padding="2dp"
                                android:text="Reading"
                                android:textColor="#000" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/nav_noimage_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/nav_icon_background_shape"
                            android:gravity="center"
                            android:onClick="navigationMenuHandler"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/nav_icon"
                                android:layout_height="@dimen/nav_icon"
                                android:src="@drawable/ic_image" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/nav_icon_background_shape_text"
                                android:padding="2dp"
                                android:text="No Image"
                                android:textColor="#000" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/nav_row_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/nav_row_1">

                        <LinearLayout
                            android:id="@+id/nav_flashplayer_btn_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/nav_icon_background_shape"
                            android:gravity="center"
                            android:onClick="navigationMenuHandler"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/nav_icon"
                                android:layout_height="@dimen/nav_icon"
                                android:src="@drawable/ic_flash" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/nav_icon_background_shape_text"
                                android:padding="2dp"
                                android:text="Flash/Script"
                                android:textColor="#000" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/nav_nightmode_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/nav_icon_background_shape"
                            android:gravity="center"
                            android:onClick="navigationMenuHandler"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/nav_icon"
                                android:layout_height="@dimen/nav_icon"
                                android:src="@drawable/ic_stars_1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/nav_icon_background_shape_text"
                                android:padding="2dp"
                                android:text="NightMode"
                                android:textColor="#000" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/nav_proxy_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/nav_icon_background_shape"
                            android:gravity="center"
                            android:onClick="navigationMenuHandler"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/nav_icon"
                                android:layout_height="@dimen/nav_icon"
                                android:src="@drawable/ic_hacker_2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/nav_icon_background_shape_text"
                                android:padding="2dp"
                                android:text="Proxy"
                                android:textColor="#000" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/nav_row_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/nav_row_2">

                        <LinearLayout
                            android:id="@+id/nav_adblock_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/nav_icon_background_shape"
                            android:gravity="center"
                            android:onClick="navigationMenuHandler"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/nav_icon"
                                android:layout_height="@dimen/nav_icon"
                                android:src="@drawable/ic_advertising" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/nav_icon_background_shape_text"
                                android:padding="2dp"
                                android:text="Adblock"
                                android:textColor="#000" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/nav_popup_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/nav_icon_background_shape"
                            android:gravity="center"
                            android:onClick="navigationMenuHandler"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/nav_icon"
                                android:layout_height="@dimen/nav_icon"
                                android:src="@drawable/ic_pop_up" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/nav_icon_background_shape_text"
                                android:padding="2dp"
                                android:text="Pop up"
                                android:textColor="#000" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/nav_tracker_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/nav_icon_background_shape"
                            android:gravity="center"
                            android:onClick="navigationMenuHandler"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/nav_icon"
                                android:layout_height="@dimen/nav_icon"
                                android:src="@drawable/ic_map" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/nav_icon_background_shape_text"
                                android:padding="2dp"
                                android:text="Off Tracker"
                                android:textColor="#000" />
                        </LinearLayout>

                    </LinearLayout>
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/nav_hishtory"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:gravity="center"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Session History"
            android:layout_margin="6dp"
            android:padding="2dp"
            android:background="@drawable/nav_icon_background_shape_text"/>
<!--        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">-->
        <ListView
            android:id="@+id/session_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:entries="@array/session_history_dummy"></ListView>
<!--        </ScrollView>-->

    </LinearLayout>

</LinearLayout>